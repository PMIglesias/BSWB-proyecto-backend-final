doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{titulo || "Clínica"}
    link(rel="stylesheet", href="/css/styles.css")
    link(rel="icon", href="/favicon.ico", type="image/x-icon")

  body
    //- Header / Navbar
    header
      nav.navbar
        a.nav-logo(href="/") Clínica coso
        if usuario
          a.nav-link(href="/auth/logout") Cerrar sesión

    //- Contenido principal
    main.container
      block content

    //- Footer minimalista
    footer.footer
      p &copy; #{new Date().getFullYear()} coso
